# Backend environment (Postgres)
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:3000

# JWT
JWT_SECRET=change-me

# Option A (recommended on hosted services): one connection string
# DATABASE_URL=postgres://postgres:password@localhost:5432/yoga_app

# Option B: discrete parameters
PGHOST=localhost
PGPORT=5432
PGDATABASE=yoga_app
PGUSER=postgres
PGPASSWORD=password

# Optional: schema to use for tables/enums (helps if public schema is locked down)
PGSCHEMA=yoga_app

# Optional: log SQL
SQL_LOGGING=false
